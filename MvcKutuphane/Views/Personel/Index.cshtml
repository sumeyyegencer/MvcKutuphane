@using MvcKutuphane.Models.Entity
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personel İşlemleri</h2>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Personel ID</th>
            <th>Personel Adı</th>
            <th style="width:fit-content;">SİL</th>
            <th style="width:fit-content;">GÜNCELLE</th>

        </tr>

     
      

    </thead>

    <tbody>
      
            @foreach (var p in Model)
            {
        <tr>
            <td>@p.ID</td>
            <td>@p.PERSONEL</td>
            <td><a href="/Personel/PersonelSil/@p.ID" class="btn btn-danger">Sil</a></td>
            <td> <a href="/Personel/PersonelGetir/@p.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>

            }

        </tbody>

</table>
<a href="/Personel/PersonelEkle/" class="btn btn-success">Personel Ekle</a>