@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Yazar ID</th>
            <th>Yazar Adı</th>
            <th>Yazar Soyadı</th>
            <th>Detay</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var y in Model)
        {
        <tr>
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>
            <td>@y.DETAY</td>
            <th>@Html.ActionLink("Sil","YazarSil", new { id = y.ID }, new {@class="btn btn-danger", onclick="return confirm('Silmek istiyor musunuz?')"})</th>
            <th><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-warning"> <i class="glyphicon glyphicon-refresh"></i> &nbsp;GÜNCELLE</a></th>

        </tr>
        }
    </tbody>
</table>

<a href="/Yazar/YazarEkle/" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Yeni Yazar Ekle</a>



