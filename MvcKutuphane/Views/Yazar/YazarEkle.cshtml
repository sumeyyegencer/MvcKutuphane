@model MvcKutuphane.Models.Entity.TBLYAZAR

@{
    ViewBag.Title = "YazarEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<form method="post">
    <div class="container"  style="margin-top:5px;" >

        <h2>Yeni Yazar Ekle</h2>
        <div class="form-row">
            <div class="form-group col-md-6">

                <label>Yazar Adı:</label>
                @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
                @Html.ValidationMessageFor(y => y.AD)


            </div>
            <div class="form-group col-md-6">

                <label>Yazar Soyadı:</label>
                @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })
                @Html.ValidationMessageFor(y=> y.SOYAD)

            </div>
        </div>
            <div class="form-group">

            <label>Yazar Detay Bilgileri</label>
            @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control" })

            </div>


            <button class="btn btn-success">EKLE</button>
    </div>
</form>
